{{#users}}
<div class="mix {{roleId}} {{сityId}} {{restaurantId}}" data-id="{{_id}}">
    <div class="row user-name">
        <div class="col-lg-12">
            {{name}}
        </div>
    </div>
    <br/>
    <div class="row add-info">
        <div class="col-xs-4 col-xs-offset-1">
            Роль:
        </div>
        <div class="col-xs-7">
            {{role.text}}
        </div>
    </div>
    <div class="row add-info">
        <div class="col-xs-4 col-xs-offset-1">
            Город:
        </div>
        <div class="col-xs-7">
            {{сity}}
        </div>
    </div>
    <div class="row add-info">
        <div class="col-xs-4 col-xs-offset-1">
            Ресторан:
        </div>
        <div class="col-xs-7">
            {{restaurant}}
        </div>
    </div>
    <div class="row add-info">
        <div class="col-xs-4 col-xs-offset-1">
            Телефон:
        </div>
        <div class="col-xs-7">
            {{phone}}
        </div>
    </div>
</div>
{{/users}}